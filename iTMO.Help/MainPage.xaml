<Page
    x:Class="iTMO.Help.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:iTMO.Help"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#1E51A4">
        <Grid.RowDefinitions>
            <RowDefinition Height="108*"/>
            <RowDefinition Height="533*"/>
        </Grid.RowDefinitions>
        <SplitView x:Name="MainBar" DisplayMode="CompactOverlay" IsPaneOpen="False" CompactPaneLength="50" OpenPaneLength="150" Margin="0,0,0,0" Grid.RowSpan="2" FontFamily="Segoe MDL2 Assets">
            <SplitView.Pane>
                <StackPanel Background="White">
                    <StackPanel Orientation="Horizontal">
                        <Button x:Name="BtnBar" 
                                HorizontalAlignment="Left" 
                                Foreground="#EC1946" 
                                Content="&#xE00F;" 
                                Height="50" 
                                Width="50" 
                                Background="Transparent" 
                                FontFamily="Segoe MDL2 Assets" 
                                Click="btnBar_Click"/>
                        <Image x:Name="Logo" HorizontalAlignment="Right" Source="/Resources/logo_small.png" Width="100"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Height="50" Width="150">
                        <Button x:Name="BtnRestartSession" 
                                HorizontalAlignment="Left" 
                                HorizontalContentAlignment="Left" 
                                Foreground="#1E51A4" 
                                Content="&#xE72C;" 
                                Height="50" 
                                Width="150" 
                                Padding="16,0,0,0"
                                Background="Transparent" 
                                FontFamily="Segoe MDL2 Assets" 
                                Click="btnRestartSession_Click"/>
                        <TextBlock Text="Refresh" Foreground="#1E51A4" FontFamily="Century Gothic" TextAlignment="Center" Padding="0,16,0,0" Margin="-100,0,0,0"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Grid>
                            <Button x:Name="BtnJournal" 
                                HorizontalAlignment="Left" 
                                HorizontalContentAlignment="Left" 
                                Foreground="#1E51A4"  
                                Content="&#xE2AC;" 
                                Height="50" 
                                Width="150" 
                                Padding="16,0,0,0"
                                Background="Transparent" 
                                FontFamily="Segoe MDL2 Assets" 
                                Click="btnJournal_Click"/>
                        </Grid>
                        <TextBlock Text="Journal" AllowDrop="False"  Foreground="#1E51A4" FontFamily="Century Gothic" TextAlignment="Center" Padding="0,16,0,0" Margin="-100,0,0,0"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Button x:Name="BtnTimeTable" 
                                HorizontalAlignment="Left" 
                                HorizontalContentAlignment="Left" 
                                Foreground="#1E51A4"  
                                Content="&#xE163;" 
                                Height="50" 
                                Width="150" 
                                Padding="16,0,0,0"
                                Background="Transparent" 
                                FontFamily="Segoe MDL2 Assets" 
                                Click="btnTimeTable_Click"/>
                        <TextBlock Text="Time Table"  Foreground="#1E51A4" FontFamily="Century Gothic" TextAlignment="Center" Padding="0,16,0,0" Margin="-100,0,0,0"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Button x:Name="BtnTermTimeTable" 
                                HorizontalAlignment="Left" 
                                HorizontalContentAlignment="Left" 
                                Foreground="#1E51A4"  
                                Content="&#xE161;" 
                                Height="50" 
                                Width="150" 
                                Padding="16,0,0,0"
                                Background="Transparent" 
                                FontFamily="Segoe MDL2 Assets" 
                                Click="btnTermTimeTable_Click"/>
                        <TextBlock Text="Grade Time"  Foreground="#1E51A4" FontFamily="Century Gothic" TextAlignment="Center" Padding="0,16,0,0" Margin="-100,0,0,0"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Button x:Name="Btn101" 
                                HorizontalAlignment="Left" 
                                HorizontalContentAlignment="Left" 
                                Content="&#xE70C;" 
                                Foreground="#1E51A4"  
                                Height="50" 
                                Width="150" 
                                Padding="16,0,0,0"
                                Background="Transparent" 
                                FontFamily="Segoe MDL2 Assets" 
                                Click="btn101_Click"/>
                        <TextBlock Text="Room 101" Foreground="#1E51A4"  FontFamily="Century Gothic" TextAlignment="Center" Padding="0,16,0,0" Margin="-100,0,0,0"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Button x:Name="BtnSettings" 
                                HorizontalAlignment="Left" 
                                HorizontalContentAlignment="Left" 
                                Content="&#xE115;" 
                                Foreground="#1E51A4"  
                                Height="50" 
                                Width="150" 
                                Padding="16,0,0,0"
                                Background="Transparent" 
                                FontFamily="Segoe MDL2 Assets" 
                                Click="btnSettings_Click"/>
                        <TextBlock Text="Settings" Foreground="#1E51A4"  FontFamily="Century Gothic" TextAlignment="Center" Padding="0,16,0,0" Margin="-100,0,0,0"/>
                    </StackPanel>
                    <StackPanel>
                        <Button Height="50" Width="150" Padding="16,0,0,0" Background="Transparent" >
                            <Button.Content>
                                <StackPanel>
                                    <TextBlock HorizontalAlignment="Left" TextAlignment="Center" Width="50" Foreground="#1E51A4" FontSize="18" Margin="-20,0,0,0" FontFamily="Segoe MDL2 Assets" Text="&#xE115;"/>
                                    <TextBlock Text="Settings" HorizontalAlignment="Center" Foreground="#1E51A4" Width="100" FontFamily="Century Gothic" Margin="30,-20,0,0" TextAlignment="Center"/>
                                </StackPanel>
                            </Button.Content>
                        </Button>
                    </StackPanel>
                    <StackPanel>
                       <Image x:Name="Credits" Height="250" HorizontalAlignment="Right" Width="100"/>
                    </StackPanel>
                </StackPanel>
            </SplitView.Pane>
        </SplitView>
    </Grid>
</Page>

